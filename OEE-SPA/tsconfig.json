{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"]
  }
}
